@model Category;

<form asp-controller="Category" asp-action="Create" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        @* For server side error validation *@
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" />
         @* For server side error validation *@
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <button asp-action="Create" type="submit" class="btn btn-primary" style="width : 150px">Create</button>
    <a asp-action="Index" class="btn btn-primary" style="width : 150px">
        Back To List
    </a>
</form>

@* Added partial script for client side validation *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}