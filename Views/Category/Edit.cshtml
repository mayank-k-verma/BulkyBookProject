@model Category;
@* We are recieving data retrieved from the database using Edit Action *@
@* And we don't need to declare or initiaze anything to use that data *@
@* Using the data directly in html using tag helpers *@

@* By Default it will look for the action with the same name in controller *@
@* So it is not necessary to explicitly tell the compiler asp-action *@
<form asp-controller="Category" asp-action="Edit" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        @* asp-for tag below populates the data recieved from the database *@
        <input asp-for="Name"class="form-control" />
        @* For server side error validation *@
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        @* asp-for tag below populates the data recieved from the database *@
        <input asp-for="DisplayOrder" class="form-control" />
         @* For server side error validation *@
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <button asp-action="Edit" type="submit" class="btn btn-primary" style="width : 150px">Update</button>
    <a asp-action="Index" class="btn btn-primary" style="width : 150px">
        Back To List
    </a>
</form>

@* Added partial script for client side validation *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}