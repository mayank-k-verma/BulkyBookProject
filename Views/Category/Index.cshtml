@model IEnumerable<Category>;
@{
    ViewData["Title"] = "Index";
}

<h1 class="center">Index Category</h1>
<div class="col-12 text-end mb-3">
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> &nbsp; Create new Category
    </a>
</div>
<table class="table table-bordered table-striped" style="width : 100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th style="width: 20%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="buttonDiv">
                    <div class="w-75 btn-group" role="group"></div>
                    @* asp-route-<parameter name passed to Edit Action> *@
                    <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id"
                    class="btn btn-primary mx-2">Edit</a>
                    @* asp-route-<parameter name passed to Delete Action> *@
                    <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id"
                    class="btn btn-danger mx-2">Delete</a></div>
                </td>
            </tr>
        }
    </tbody>
</table>